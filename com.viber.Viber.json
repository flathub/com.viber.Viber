{
    "app-id": "com.viber.Viber",
    "base-version": "23.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "viber",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=~/.ViberPC:create",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--device=all",
        "--env=XDG_CURRENT_DESKTOP=Unity",
        "--talk-name=org.freedesktop.PowerManagement",
        "--talk-name=org.freedesktop.ScreenSaver",
        "--talk-name=org.gnome.SessionManager",
        "--talk-name=org.gtk.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        {
            "name": "viber",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 apply_extra /app/bin/apply_extra",
                "install -Dm755 viber /app/bin/viber",
                "install -Dm644 com.viber.Viber.appdata.xml /app/share/appdata/com.viber.Viber.appdata.xml",
                "cp /usr/bin/bsdtar /app/bin"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "bsdtar -Oxf viber.deb data.tar.xz | bsdtar -xf -",
                        "mv opt/viber .",
                        "chmod -R a-s,go+rX,go-w .",
                        "install -d /app/extra/export/share/applications",
                        "sed 's|Icon=.*|Icon=com.viber.Viber|; s|Exec=.*|Exec=viber|;' usr/share/applications/viber.desktop > /app/extra/export/share/applications/com.viber.Viber.desktop",
                        "echo 'StartupWMClass=Viber' >> /app/extra/export/share/applications/com.viber.Viber.desktop",
                        "for icon_size in 16 24 32 48 64 96 128 256; do\n                   install -Dm644 usr/share/viber/${icon_size}x${icon_size}.png /app/extra/export/share/icons/hicolor/${icon_size}x${icon_size}/apps/com.viber.Viber.png\n               done",
                        "install -Dm644 usr/share/icons/hicolor/scalable/apps/Viber.svg /app/extra/export/share/icons/hicolor/scalable/apps/com.viber.Viber.svg",
                        "sed 's|Prefix=/opt/viber/|Prefix=/app/extra/viber/|; ' /app/extra/viber/qt.conf > /app/extra/viber/qt.conf",
                        "rm -r viber.deb opt usr"
                    ]
                },
                {
                    "type": "extra-data",
                    "filename": "viber.deb",
                    "url": "https://download.cdn.viber.com/cdn/desktop/Linux/viber.deb",
                    "sha256": "46b39b98ddb540e9b99e4d11d9abe0087d2e96b7e2508a363e7c985af41a195c",
                    "size": 150000340
                },
                {
                    "type": "script",
                    "dest-filename": "viber",
                    "commands": [
                        "exec env TMPDIR=$XDG_CACHE_HOME /app/extra/viber/Viber $@"
                    ]
                },
                {
                    "type": "file",
                    "path": "com.viber.Viber.appdata.xml"
                }
            ]
        },
        {
            "name": "libsnappy",
            "buildsystem": "cmake",
            "config-opts": [
                "-DSNAPPY_BUILD_TESTS=OFF",
                "-DSNAPPY_BUILD_BENCHMARKS=OFF",
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/google/snappy/archive/refs/tags/1.1.8.tar.gz",
                    "sha256": "16b677f07832a612b0836178db7f374e414f94657c138e6993cbfc5dcc58651f"
                }
            ],
            "cleanup": [
                "/include"
            ]
        },
        {
            "name": "libevent",
            "cleanup": [
                "/include",
                "/bin"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1606,
                        "url-template": "https://github.com/libevent/libevent/releases/download/release-$version-stable/libevent-$version-stable.tar.gz"
                    },
                    "type": "archive",
                    "url": "https://github.com/libevent/libevent/releases/download/release-2.1.12-stable/libevent-2.1.12-stable.tar.gz",
                    "sha256": "92e6de1be9ec176428fd2367677e61ceffc2ee1cb119035037a27d346b0403bb"
                }
            ]
        },
        {
            "name": "krb5",
            "subdir": "src",
            "config-opts": [
                "--prefix=/app",
                "--disable-rpath",
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://kerberos.org/dist/krb5/1.21/krb5-1.21.2.tar.gz",
                    "sha256": "9560941a9d843c0243a71b17a7ac6fe31c7cebb5bce3983db79e52ae7e850491"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/sbin",
                "/share",
                "/var"
            ]
        }
    ]
}
